platform :osx, '10.13'

target 'Jirara' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Jirara
  
  # Networking
  pod 'Alamofire'
  
  # JSON Parser
  pod 'Mappable'
  
  # Images Cache
  pod 'Kingfisher'

  # Charts Lib
  pod 'Charts'
  pod 'ChartsRealm'
  
  # Persistence
  pod 'Realm'

  # E-mail
  pod 'mailcore2-osx'

end
